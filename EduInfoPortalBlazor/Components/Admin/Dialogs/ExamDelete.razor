<MudDialog>
    <DialogContent>
        <MudTextField Value="@Exam.Name" Label="Название" ReadOnly="true" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Отменить</MudButton>
        <MudButton Color="Color.Info" OnClick="Delete">Удалить</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public Exam Exam { get; set; } = new Exam();

    void Cancel() => MudDialog.Cancel();

    void Delete() => MudDialog.Close(DialogResult.Ok(Exam));
}
